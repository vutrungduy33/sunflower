<view class="mvp-tabbar">
  <view
    class="mvp-tabbar__item {{current === item.key ? 'mvp-tabbar__item--active' : ''}}"
    wx:for="{{tabs}}"
    wx:key="key"
    data-key="{{item.key}}"
    data-path="{{item.path}}"
    bindtap="onTap"
  >
    <t-icon name="{{item.icon}}" size="20px" color="{{current === item.key ? '#2e7d32' : '#6b7280'}}" />
    <text class="mvp-tabbar__label">{{item.label}}</text>
  </view>
</view>
