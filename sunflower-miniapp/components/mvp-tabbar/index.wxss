.mvp-tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  height: 108rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  z-index: 50;
}

.mvp-tabbar__item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  color: #6b7280;
}

.mvp-tabbar__item--active {
  color: #2e7d32;
}

.mvp-tabbar__label {
  font-size: 20rpx;
  line-height: 1;
}
