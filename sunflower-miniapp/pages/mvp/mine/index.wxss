@import '../common.wxss';

.profile-card {
  display: flex;
  align-items: center;
}

.avatar {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  background: #2e7d32;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 700;
  margin-right: 16rpx;
}

.profile-main {
  flex: 1;
}

.profile-name {
  font-size: 30rpx;
  color: #111827;
  font-weight: 600;
}

.profile-phone {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 14rpx;
}

.stats-item {
  border-radius: 14rpx;
  background: #f8fafc;
  padding: 16rpx;
  text-align: center;
}

.stats-item__value {
  font-size: 34rpx;
  color: #2e7d32;
  font-weight: 700;
}

.stats-item__label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.field {
  margin-bottom: 14rpx;
}

.field-label {
  display: block;
  margin-bottom: 8rpx;
  color: #4b5563;
  font-size: 22rpx;
}

.field-input {
  height: 72rpx;
  border-radius: 14rpx;
  background: #f8fafc;
  padding: 0 16rpx;
  font-size: 24rpx;
}

.mt8 {
  margin-top: 8rpx;
}

.mt16 {
  margin-top: 16rpx;
}
