@import '../common.wxss';

.map-panel {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.poi-card {
  border-radius: 18rpx;
  background: #f8fafc;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.poi-card:last-child {
  margin-bottom: 0;
}

.poi-card__head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.poi-card__name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.poi-card__distance {
  font-size: 22rpx;
  color: #2e7d32;
}

.poi-card__meta {
  margin: 10rpx 0 16rpx;
  color: #6b7280;
  font-size: 23rpx;
}
